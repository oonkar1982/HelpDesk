@using HelpDesk.Common.Helpers;
@model PaginatedData<HelpDesk.Common.Models.IncidentModel>
@{
    ViewData["Title"] = "PaginatedGet";
}

<table id="myTable" class="table table-sm ms-crm-List-Header">
    <thead>
        <tr>
            <th>
                TicketNumber
            </th>
            <th>
                Priority
            </th>
            <th>
                Status
            </th>
            <th>
                Customer
            </th>



            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="ms-crm-List-Row">
                <td>
                    @Html.DisplayFor(modelItem => item.TicketNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.IncidentId" class='btn btn-primary btn-sm'><svg class="svg-inline--fa fa-edit fa-w-18 text-500" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="edit" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" data-fa-i2svg=""><path fill="currentColor" d="M402.6 83.2l90.2 90.2c3.8 3.8 3.8 10 0 13.8L274.4 405.6l-92.8 10.3c-12.4 1.4-22.9-9.1-21.5-21.5l10.3-92.8L388.8 83.2c3.8-3.8 10-3.8 13.8 0zm162-22.9l-48.8-48.8c-15.2-15.2-39.9-15.2-55.2 0l-35.4 35.4c-3.8 3.8-3.8 10 0 13.8l90.2 90.2c3.8 3.8 10 3.8 13.8 0l35.4-35.4c15.2-15.3 15.2-40 0-55.2zM384 346.2V448H64V128h229.8c3.2 0 6.2-1.3 8.5-3.5l40-40c7.6-7.6 2.2-20.5-8.5-20.5H48C21.5 64 0 85.5 0 112v352c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48V306.2c0-10.7-12.9-16-20.5-8.5l-40 40c-2.2 2.3-3.5 5.3-3.5 8.5z"></path></svg></a>

                </td>
            </tr>
        }
    </tbody>

</table>


<nav>
    <ul class="pagination justify-content-center">




        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            if (Model.PageIndex == @i)
            {
                <li class="page-item active">
                    <a class="page-link" href="/Incidents/Index?pageIndex=@i">@i</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" href="/Incidents/Index?pageIndex=@i">@i</a>
                </li>
            }



        }



    </ul>
</nav>
