@model HelpDesk.Common.Models.UserEditModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
        <form asp-action="Create">
            <div class="col-sm-5">
                <div class="card">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group row">
                            <label asp-for="FirstName" class="col-md-3 control-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="LastName" class="col-md-3 control-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="LastName" class="form-control form-control-sm" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Email" class="col-md-3 control-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="Email" class="form-control form-control-sm" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Mobile" class="col-md-3 control-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="Mobile" class="form-control form-control-sm" />
                                <span asp-validation-for="Mobile" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Password" class="col-md-3 control-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="Password" class="form-control form-control-sm" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="CompanyId" class="col-md-3 control-label"></label>
                            <div class="col-sm-9">
                                <select asp-for="CompanyId" class="form-control form-control-sm" asp-items="ViewBag.Companies">
                                    <option>--Select---</option>
                                </select>
                                <span asp-validation-for="CompanyId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                        <partial name="_buttonList" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
</div>




