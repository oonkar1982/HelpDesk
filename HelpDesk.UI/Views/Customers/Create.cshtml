@model HelpDesk.Common.Models.CreateCustomerModel

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-sm-5">
        <div class="card">
            <div class="card-header"> gg</div>
            <div class="card-body">

                <input type="hidden" asp-for="CustomerId" />
                    
                <div class="form-group row">
                    <label asp-for="AccountNumber" class="col-md-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="AccountNumber" class="form-control form-control-sm"  />
                        <span asp-validation-for="AccountNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-md-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Description" class="form-control form-control-sm" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="WebSiteUrl" class="col-md-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="WebSiteUrl" class="form-control form-control-sm" />
                        <span asp-validation-for="WebSiteUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="EmailAddress1" class="col-md-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="EmailAddress1" class="form-control form-control-sm" />
                        <span asp-validation-for="EmailAddress1" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="EmailAddress2" class="col-md-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="EmailAddress2" class="form-control form-control-sm" />
                        <span asp-validation-for="EmailAddress2" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Telephone1" class="col-md-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Telephone1" class="form-control form-control-sm" />
                        <span asp-validation-for="Telephone1" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">

                    <label asp-for="Telephone2" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="Telephone2" class="form-control" rows="5"/>
                    </div>
                </div>
               

            </div>
            <div class="card-footer">
                <div class="col-md-12 d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                    <a class="btn btn-primary btn-sm  ms-auto" asp-action="Index">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>
